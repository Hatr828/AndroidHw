<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_search_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/title_search"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_brand_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_brand" />

        <AutoCompleteTextView
            android:id="@+id/auto_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/hint_brand" />

        <TextView
            android:id="@+id/text_model_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_model" />

        <AutoCompleteTextView
            android:id="@+id/auto_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/hint_model" />

        <TextView
            android:id="@+id/text_year_from_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_year_from" />

        <Spinner
            android:id="@+id/spinner_year_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/text_year_to_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_year_to" />

        <Spinner
            android:id="@+id/spinner_year_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/text_cost_from_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_cost_from" />

        <Spinner
            android:id="@+id/spinner_cost_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/text_cost_to_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_cost_to" />

        <Spinner
            android:id="@+id/spinner_cost_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/text_matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/matches_default" />

        <Button
            android:id="@+id/button_matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/button_matches" />
    </LinearLayout>
</ScrollView>
