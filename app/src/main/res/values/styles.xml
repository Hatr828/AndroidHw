<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AndroidHW" parent="@android:style/Widget.Material.Button" />

    <style name="Widget.AndroidHW.CalculatorButton" parent="Widget.AndroidHW">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@color/button_background</item>
    </style>

    <style name="Widget.AndroidHW.CalculatorButton.Operator" parent="Widget.AndroidHW.CalculatorButton">
        <item name="android:background">@color/button_operator_background</item>
    </style>

    <style name="Widget.AndroidHW.CalculatorButton.Equals" parent="Widget.AndroidHW.CalculatorButton">
        <item name="android:background">@color/button_equals_background</item>
    </style>

    <style name="Widget.AndroidHW.CalculatorButton.Clear" parent="Widget.AndroidHW.CalculatorButton">
        <item name="android:background">@color/button_clear_background</item>
    </style>
</resources>
